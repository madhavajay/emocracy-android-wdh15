<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label_vote_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Votes"
         />

    <TextView
        android:id="@+id/label_vote_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/label_vote_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/label_my_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Vote"
        />

    <Button
        android:id="@+id/button_vote_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES" />

    <Button
        android:id="@+id/button_vote_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO" />

</LinearLayout>